<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hrserver.mapper.hr.HrMapper">
    <resultMap id="lazyLoadRoles" type="cn.hrserver.pojo.Hr" >
        <collection property="roles" ofType="cn.hrserver.pojo.Role" select="cn.hrserver.mapper.hr.HrMapper.getRolesByHrId"
                    column="id"></collection>
    </resultMap>
    <resultMap id="eagerLoadRoles" type="cn.hrserver.pojo.Hr">
        <collection property="roles" ofType="cn.hrserver.pojo.Role">
            <id property="id" column="rid"/>
            <result property="name" column="rname"/>
            <result property="nameZh" column="rnameZh"/>
        </collection>
    </resultMap>
    <select id="loadUserByUsername" resultMap="lazyLoadRoles">
        select * from hr where username=#{userName}
    </select>
    <select id="getRolesByHrId" resultType="cn.hrserver.pojo.Role">
        SELECT r.* FROM hr_role h,role r where h.rid=r.id AND h.hrid=#{id}
    </select>
</mapper>